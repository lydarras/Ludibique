{% extends 'base.html.twig' %}

{% block title %}Seance index{% endblock %}

{% block body %}
    <h1>Toutes les séances</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Organisateur</th>
                <th>Nom</th>
                <th>Description</th>
                <th>Date</th>
                <th>Heure</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>

        {% for seance in seances %}
            <tr>
                <td>{{ seance.id }}</td>
                <td>{{ seance.organisateur.pseudo }}</td>
                <td>{{ seance.nom }}</td>
                <td>{{ seance.description }}</td>
                <td>{{ seance.date ? seance.date|date('Y-m-d') : '' }}</td>
                <td>{{ seance.heure ? seance.heure|date('H:i') : '' }}</td>
                <td>
                    <a href="{{ path('app_seance_show', {'id': seance.id}) }}">Afficher en détails</a>
                    {% if app.user %}
                        {% if app.user in seance.joueurs %}
                            <p><a href="{{ path('supprimerJoueur', {'id': seance.id}) }}">Se retirer</a></p>
                        {% else %}
                            <p><a href="{{ path('ajouterJoueur', {'id': seance.id}) }}">Participer</a></p> 
                        {% endif %}
                    {% endif %}
                </td>
                
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Aucune séance</td>
            </tr>
        {% endfor %}

        </tbody>
    </table>

{% endblock %}
