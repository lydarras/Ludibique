{% extends 'base.html.twig' %}

{% block title %}Seance{% endblock %}

{% block body %}
    <h1>Seance</h1>
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ seance.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ seance.nom }}</td>
            </tr>
            <tr>
                <th>Jeu</th>
                <td>{{ seance.jeu.nom }}</td>
            </tr>
            <tr>
                <th>Photo</th>
                <td><img src="{{ asset('jeux/' ~ seance.jeu.image) }}" alt="{{ seance.jeu.nom }}"></td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ seance.description }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ seance.date ? seance.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Heure</th>
                <td>{{ seance.heure ? seance.heure|date('H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_seance_index') }}">back to list</a>

    <a href="{{ path('app_seance_edit', {'id': seance.id}) }}">edit</a>

    {{ include('seance/_delete_form.html.twig') }}
{% endblock %}
